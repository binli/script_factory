const Gio = imports.gi.Gio;

fuction dir_statistic (result)
{
    FileEnumerator iter;
    FileInfo single;
    let filename;
    let number;

    iter = enumerate_children_finish(path);

    single = iter.next_file();

    while (single != null) {

        filename = single.get_name();
        number++;
        log (filename, number);
        single = iter.next_file();
    }
}

fuction files_num(path) 
{
    let file_dir = new_for_path(path);

    file_dir.enumerate_children_async (none, none, default, none, dir_statistic, none);
}
